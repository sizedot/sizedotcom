<script language="JavaScript">
  $("#showcontent").hide();
  //현재 페이지에서 카테고리를 선택하면 해당 카테고리 보여주는 폼이 나오도록하는 ajax
//  $('.btntext').checked(function(){
  $('.showme').click(function(){
    var psel_info = $("input:radio[name='psel']:checked").val();
    if (psel_info != "" || psel_info != null){
      $.ajax({
        method: "GET",
        url: "/datashow",
        data: {psel: psel_info}
      })
      $("#showcontent").show();
    }
  });
</script>